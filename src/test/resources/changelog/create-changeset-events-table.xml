<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="create_table_events" author="artemij">
        <createTable tableName="events">
            <column name="id" autoIncrement="false" type="integer" defaultValueComputed="nextval('counter.eventsid')">
                <constraints primaryKeyName="events_pkey" nullable="false" primaryKey="true" />
            </column>
            <column name="login" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="event" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>